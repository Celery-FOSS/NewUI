<UserControl x:Class="Celery.Settings.View.BooleanSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:Celery.Settings"
             mc:Ignorable="d"
             Height="40" d:DesignWidth="300"
             Margin="0,0,0,5"
             d:DataContext="{d:DesignInstance settings:BooleanSetting}">
    <Border Background="{DynamicResource LightBackgroundBrush}"
            CornerRadius="4">
        <Grid>
            <TextBlock Text="{Binding Name}"
                       FontSize="13"
                       Foreground="{DynamicResource ForegroundBrush}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                      Background="{DynamicResource LightBackgroundBrush}"
                      IsChecked="{Binding Value, Mode=TwoWay}"
                      Command="{Binding CheckedCommand}"/>
        </Grid>
    </Border>
</UserControl>
