<UserControl x:Class="Celery.Settings.SettingsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celery.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150" Background="Transparent">
    <Border Background="{StaticResource BackgroundBrush}" BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel x:Name="SettingsPanel" Orientation="Vertical"/>
        </ScrollViewer>
    </Border>
</UserControl>
